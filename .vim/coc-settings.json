{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnSave": true,
  "coc.preferences.willSaveHandlerTimeout": 5000,
  "codeLens.enable": false,
  "diagnostic.messageTarget": "echo",
  "eslint.autoFixOnSave": true,
  "eslint.run": "onType",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "javascript.jsx",
    "javascript.tsx"
  ],
  "signature.target": "echo",
  "solargraph.shell": "/opt/homebrew/bin/zsh",
  "solargraph.autoformat": true,
  "solargraph.useBundler": true,
  "solargraph.checkGemVersion": false,
  "solargraph.promptDownload": false,
  "suggest.noselect": true,
  "suggest.timeout": 2000,
  "suggest.floatConfig": {
    "borderhighlight": "CocFloating" // controls completions popup colors
  },
  "tsserver.implicitProjectConfig.experimentalDecorators": true
}
