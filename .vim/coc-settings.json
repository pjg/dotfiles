{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnSave": true, // coc-prettier
  "coc.preferences.willSaveHandlerTimeout": 5000,
  "codeLens.enable": false,
  "diagnostic.messageTarget": "echo",
  "eslint.autoFixOnSave": true,
  "eslint.run": "onType",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "javascript.jsx",
    "javascript.tsx"
  ],
  "html.format.templating": true,
  "languageserver": {
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "formatter": "auto" // "auto" means use rubocop (if installed) or fall back to syntax_tree
      },
      "filetypes": ["ruby"]
    }
  },
  "signature.target": "echo",
  "suggest.noselect": true,
  "suggest.timeout": 2000,
  "suggest.floatConfig": {
    "borderhighlight": "CocFloating" // controls completions popup colors
  },
  "tsserver.implicitProjectConfig.experimentalDecorators": true
}
