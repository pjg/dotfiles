{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.hoverTarget": "echo",
  "codeLens.enable": false,
  "diagnostic.messageTarget": "echo",
  "diagnostic.signOffset": 9999999,
  "eslint.autoFixOnSave": true,
  "eslint.validate": ["javascript", "javascriptreact", "javascript.jsx", "javascript.tsx"],
  "eslint.run": "onSave",
  "prettier.eslintIntegration": true,
  "signature.target": "echo",
  "solargraph.autoformat": true,
  "solargraph.checkGemVersion": false,
  "solargraph.promptDownload": false,
  "suggest.floatEnable": false,
  "suggest.timeout": 2000,
  "tsserver.formatOnType": false
}
